{
  "name": "design-system-beacon",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "npm run build:tokens && next build",
    "build:tokens": "npx tsx scripts/build-tokens.ts",
    "build:package": "cd packages/beacon-core && npm run build",
    "build:icons": "cd packages/beacon-icons && npm run build",
    "publish:package": "cd packages/beacon-core && npm publish",
    "publish:icons": "cd packages/beacon-icons && npm publish",
    "start": "next start",
    "lint": "next lint"
  },
  "dependencies": {
    "next": "^16.1.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-syntax-highlighter": "^16.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
