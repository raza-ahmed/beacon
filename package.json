{
  "name": "design-system-beacon",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "npm run copy:assets && next dev",
    "build": "npm run build:tokens && npm run copy:assets && npm run validate:css-vars && next build",
    "build:tokens": "npx tsx scripts/build-tokens.ts",
    "build:package": "npm run sync:version && cd packages/beacon-ui && npm run build",
    "build:icons": "npm run sync:version && cd packages/beacon-icons && npm run build",
    "copy:assets": "npx tsx scripts/copy-assets.ts",
    "sync:version": "npx tsx scripts/sync-version.ts",
    "publish:package": "npm run sync:version && cd packages/beacon-ui && npm publish",
    "publish:icons": "npm run sync:version && cd packages/beacon-icons && npm publish",
    "start": "next start",
    "lint": "next lint",
    "validate:css-vars": "npx tsx scripts/validate-css-vars.ts",
    "watch:docs": "tsx scripts/watch-docs.ts",
    "check:docs": "tsx scripts/check-docs-sync.ts"
  },
  "dependencies": {
    "beacon-icons": "file:./packages/beacon-icons",
    "beacon-ui": "file:./packages/beacon-ui",
    "framer-motion": "^12.23.26",
    "next": "^16.1.1",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-syntax-highlighter": "^16.1.0"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.3.3",
    "@types/node": "^25.0.3",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/react-syntax-highlighter": "^15.5.13",
    "chokidar": "^4.0.3",
    "eslint": "^9.39.2",
    "eslint-config-next": "^16.1.1",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  }
}
