{
  "name": "beacon-ui",
  "version": "3.4.8",
  "description": "Beacon Design System - Components and tokens",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "files": [
    "dist",
    "tokens",
    "assets",
    "README.md",
    "CHANGELOG.md"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    },
    "./tokens": "./tokens/generated/index.css",
    "./tokens/*": "./tokens/generated/*.css"
  },
  "scripts": {
    "build": "tsc && npm run build:tokens",
    "build:tokens": "tsx ../../scripts/build-tokens.ts --output-dir=./tokens/generated --types-output=./src/tokens/types.ts",
    "prepublishOnly": "npm run build"
  },
  "peerDependencies": {
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "keywords": [
    "design-system",
    "components",
    "react",
    "tokens"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/raza-ahmed/beacon.git"
  },
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  }
}

